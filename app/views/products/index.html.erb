
<h3 class="text-center">Products for Sale</h3> 
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <% @products.each do |product| %>
        <%= render "product_row", product: product, order_item: @order_item, image_tag: product.photo.url(:small) %>
        <h5>
        <%= link_to "Edit Posting", edit_product_path(product)%>
        </h5>
      <% end %>
    </div>
  </div>
